<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bthrust.eggonline">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".eggOnline.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".eggOnline.Login"
            android:label="Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".eggOnline.Product_CategoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".eggOnline.OrderViewActivity"
            android:label="View Order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".eggOnline.AddCart_Class"
            android:label="Cart List"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".eggOnline.BillingDetailsActivity" />
        <activity android:name=".eggOnline.YourOrderActivity" />
        <activity android:name=".eggOnline.OrderPlaceSuccessActivity" />
        <activity
            android:name=".eggOnline.MyOrderActivity"
            android:label="My Orders" />
        <activity android:name=".eggOnline.MyOrder_ItemsList_Activity" />
        <activity
            android:name=".eggOnline.UserProfile_Activity"
            android:label="User Profile" />
        <activity android:name=".eggOnline.HomeActivity"
            android:label="Categories"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>